@{
    Layout = "_Layout";
}
<style>
    #btn{
        margin-left: 70%;
         display:inline;
         font-size: 20px;
    }
    
    
</style>
@model IEnumerable<LiquidFilling>
<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <div class="main">
                <div>
                <a asp-controller="Admin" asp-action="AddLiquidFill" id="btn"  class="btn btn-outline-info">Add Liquid Filling</a>
            </div>
            <div>
                 <h5 class="card-title fw-semibold mb-4">Detailed Liquid filling</h5> 
            </div>
            
           </div>
            <div class="table-responsive" style="margin-right:-350px">
                <table class="table text-nowrap mb-0 align-middle" >

                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Id</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Machine Name</h6>
                            </th>
                            <th class="border-bottom-0">
                              <h6 class="fw-semibold mb-0">Liquid Image</h6>
                                 
                                    </td>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Air Pressure</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Air Volume</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Filling Speed</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Filling Range</h6>
                            </th>
                            
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Action</h6>
                            </th>
                        </tr>
                    </thead>

                    @foreach(LiquidFilling lf in Model){
                        <tbody>
                            <tr>
                                 <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@lf.LiquidFillingId</h6>
                                    </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@lf.machinename</h6>
                                </td>
                                    <td class="border-bottom-0">
                                     <img src="~/@lf.liquidImage" width="50" height="50">
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@lf.airpressure</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@lf.airvolume</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@lf.fillingspeed</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@lf.fillingrange</h6>
                                </td>
                                
                                <td>
                                    <a asp-action="EditLiquid" asp-route-id="@lf.LiquidFillingId" class="btn btn-outline-info">Edit</a>
                                </td>
                                 <td>
                                    <a asp-action="LiqDelete" asp-route-id="@lf.LiquidFillingId" class="btn btn-outline-info">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    }


                 
                        
                    
                   
                </table>
            </div>
        </div>
    </div>
</div>
        </div>

