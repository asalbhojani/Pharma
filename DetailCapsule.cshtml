@{
    Layout = "_Layout"; 
}

@model IEnumerable<Capsule>
<style>
    #btn{
        margin-left: 70%;
         display:inline;
         font-size: 20px;
    }
    
    
</style>
<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <div class="main">
                <div>
                <a asp-controller="Admin" asp-action="AddCapsule" id="btn"  class="btn btn-outline-info">Add Capsule</a>
            </div>
            <div>
                 <h5 class="card-title fw-semibold mb-4">Detailed Capsule</h5> 
            </div>
            
           </div>
            
            <div class="table-responsive" >
                <table class="table text-nowrap mb-0 align-middle" >

                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Id</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Capsule Name</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Capsule Image</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Capsule Output</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Capsule Size</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Machine Dimension</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Shipping Weight</h6>
                            </th>
                            
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Action</h6>
                            </th>
                        </tr>
                                            </thead>
                        @foreach (Capsule c in Model)
                        {
                             <tbody>
                            
                                 <tr>
                                     <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@c.Capsuleid</h6>
                                    </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@c.machinename</h6>
                                </td>
                                 <td class="border-bottom-0">
                                
                                   <img src="~/@c.CapsuleImage" width="50" height="50">
                                 </td>
                                    
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@c.Output</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@c.capsulesize</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@c.machinedimenssion</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@c.shippingweight</h6>
                                </td>
                                 <td>
                                    <a asp-action="EditCapsule" asp-route-id="@c.Capsuleid" class="btn btn-outline-info">Edit</a>
                                </td>
                                 <td>
                                    <a asp-action="Delete" asp-route-id="@c.Capsuleid" class="btn btn-outline-info">Delete</a>
                                </td>
                                                                 
                                 </tr>



                        </tbody>
                        }


                 
                       
                    
                   
                </table>
            </div>
        </div>
    </div>
</div>
        </div>
