@{
    Layout = "_Layout";
}

@model IEnumerable<Career>;
<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <h5 class="card-title fw-semibold mb-4">Job Career</h5>
            <div class="table-responsive">
                <table class="table text-nowrap mb-0 align-middle">

                    <thead class="text-dark fs-4">
                        <tr> 
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Id</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Cv</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Name</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Last Name</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Email</h6>
                            </th>
                           
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Contact</h6>
                            </th>
                             <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Address</h6>
                            </th>
                             <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Education</h6>
                            </th>
                             <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Degree</h6>
                            </th>
                           
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Action</h6>
                            </th>
                        </tr>
                    </thead>

                  @foreach (Career c in Model)
                  {
                     <tbody>
                            <tr>
                               

                                <td class="border-bottom-0">
                                    <p class="mb-0 fw-normal">@c.id</p>
                                </td>

                            <td class="border-bottom-0">
                                <p class="mb-0 fw-normal">@c.Resume</p>
                            </td>

                            <td class="border-bottom-0">
                                    <p class="mb-0 fw-normal">@c.Name</p>
                                </td>

                            <td class="border-bottom-0">
                                <p class="mb-0 fw-normal">@c.lastname</p>
                            </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0 fs-4">@c.Email</h6>
                                </td>

                            <td class="border-bottom-0">
                                <p class="mb-0 fw-normal">@c.Contact</p>
                            </td>
                             <td class="border-bottom-0">
                                <p class="mb-0 fw-normal">@c.Address</p>
                            </td>
                             <td class="border-bottom-0">
                                <p class="mb-0 fw-normal">@c.Education</p>
                            </td>
                             <td class="border-bottom-0">
                                <p class="mb-0 fw-normal">@c.Degree</p>
                            </td>

                            <td class="border-bottom-0">
                                <div class="d-flex align-items-center gap-2">
                                    <a href="mailto:
                                                     @c.Email">
                                        <span class="badge bg-primary rounded-3 fw-semibold">E-Mail</span>
                                    </a>
                                </div>
                            </td>

                            </tr>
                        </tbody>
 
                  }

                                         

                </table>
            </div>
        </div>
    </div>
</div>
