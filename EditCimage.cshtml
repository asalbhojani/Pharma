@{
    Layout = "_Layout";
}

@model Capsule
<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Edit Capsule</h5>
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    @*<form method="post">*@
                    <input type="hidden" asp-for="Capsuleid"/>

                    <div class="mb-3">
                        <label class="form-label">Image</label>
                        <input type="file" class="form-control" name="capsuleImage" >
                    </div>


                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>

    </div>
</div>