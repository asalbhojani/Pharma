@{
    Layout = "_Layout";
}
<style>
    #btn{
        margin-left: 70%;
         display:inline;
         font-size: 20px;
    }
    
    
</style>
@model IEnumerable<Tablet>
<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <div class="main">
                <div>
                <a asp-controller="Admin" asp-action="AddTablet" id="btn"  class="btn btn-outline-info">Add Tablet</a>
            </div>
            <div>
                 <h5 class="card-title fw-semibold mb-4">Detailed Tablet</h5> 
            </div>
            
           </div>
            <div class="table-responsive" style="margin-right:-350px">
                <table class="table text-nowrap mb-0 align-middle" >

                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Id</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Machine Name</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Tablet Image</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Model Number</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">dise</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Maximum Pressure</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Max diameter</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Max Depth</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Prduct Capacity</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Machine Size</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Machine Weight</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Net Weight</h6>
                            </th>
                            
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Action</h6>
                            </th>
                        </tr>
                    </thead>

                 @foreach (Tablet t in Model)
                 {
                      <tbody>
                             <tr>
                                     <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.TabletId</h6>
                                    </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.machinename</h6>
                                </td>
                                    <td class="border-bottom-0">
                                   <img src="~/@t.TabletImage" width="50" height="50">
                                    </td>
                                    <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.modelnumber</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.dice</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.maxpressure</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.maxdiameteroftablet</h6>
                                </td>
                                 <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.Maxdepthoffill</h6>
                                    </td>
                                    <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.productioncapacity</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.machinesize</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.machineweight</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@t.NetWeight</h6>
                                </td>
                                
                                 <td>
                                    <a asp-action="EditTablet" asp-route-id="@t.TabletId" class="btn btn-outline-info">Edit</a>
                                </td>

                                 <td>
                                    <a asp-action="TabDelete" asp-route-id="@t.TabletId" class="btn btn-outline-info">Delete</a>
                                </td>



                                 </tr>
                        </tbody>
                 }
                        
                    
                   
                </table>
            </div>
        </div>
    </div>
</div>
        </div>

