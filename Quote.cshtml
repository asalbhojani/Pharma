@{
    Layout = "_Layout";
}

@model IEnumerable<Quote>
<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <h5 class="card-title fw-semibold mb-4">Quote</h5>
            <div class="table-responsive" >
                <table class="table text-nowrap mb-0 align-middle" >

                    <thead class="text-dark fs-4">
                        <tr> 
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Id</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Full Name</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Company Name</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Address</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">City</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">State</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Postal Code</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Country</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Email Address</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Phone</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Comments</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Action</h6>
                            </th>
                        </tr>
                    </thead>

                    @foreach(Quote q in Model)
                    {
                        <tbody>
                            <tr>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@q.Id</h6>
                                </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">@q.FullName</h6>
                                    <span class="fw-normal"></span>
                                </td>

                                <td class="border-bottom-0">
                                    <p class="mb-0 fw-normal">@q.CompanyName</p>
                                </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0 fs-4">@q.Address</h6>
                                </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">@q.City</h6>
                                    <span class="fw-normal"></span>
                                </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">@q.State</h6>
                                    <span class="fw-normal"></span>
                                </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">@q.PostalCode</h6>
                                    <span class="fw-normal"></span>
                                </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">@q.Country</h6>
                                    <span class="fw-normal"></span>
                                </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">@q.Email</h6>
                                    <span class="fw-normal"></span>
                                </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">@q.Phone</h6>
                                    <span class="fw-normal"></span>
                                </td>

                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">@q.Comments</h6>
                                    <span class="fw-normal"></span>
                                </td>

                                <td class="border-bottom-0">
                                    <div class="d-flex align-items-center gap-2">
                                        <a href="mailto:
                                                    @q.Email">
                                            <span class="badge bg-primary rounded-3 fw-semibold">E-Mail</span>
                                        </a>
                                    </div>
                                </td>

                            </tr>
                        </tbody>
                    }
                   
                </table>
            </div>
        </div>
    </div>
</div>
        </div>